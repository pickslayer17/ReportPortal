# Используем SDK-образ для сборки
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Копируем все .csproj-файлы для всех проектов
COPY ReportPortal.DAL/ReportPortal.DAL.csproj ReportPortal.DAL/
COPY ReportPortal.BLR/ReportPortal.BL.csproj ReportPortal.BLR/
COPY ReportPortal/ReportPortal.csproj ReportPortal/

# Восстанавливаем зависимости
WORKDIR /src/ReportPortal
RUN dotnet restore

# Копируем остальной код
COPY . .

# Публикуем
RUN dotnet publish -c Release -o /app/publish

# Используем рантайм-образ
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
COPY --from=build /app/publish .

EXPOSE 80

ENTRYPOINT ["dotnet", "ReportPortal.dll"]